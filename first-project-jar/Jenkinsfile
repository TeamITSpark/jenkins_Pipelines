timestamps {
    node() {
        // Use an environment variable for the Slack channel
        def slackChannel = env.SLACK_CHANNEL ?: '#your-slack-channel'

        try {
            stage('first-project-jar - Checkout') {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: '', url: 'https://github.com/TeamITSpark/first-project-jar.git']]]) 
            }

            stage('first-project-jar - compile') {
                bat """ 
                mvn clean compile
                """ 
            }

            stage('first-project-jar - test') {
                bat """ 
                mvn clean test
                """
                junit '**/target/surefire-reports/*.xml'
            }

            stage('first-project-jar - package') {
                bat """ 
                mvn clean package
                """ 
            }

            stage('first-project-jar - install') {
                bat """ 
                mvn clean install
                """ 
            }

            slackSend (channel: slackChannel, color: 'good', message: "Build Success: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]' (${env.BUILD_URL})")

        } catch (Exception e) {
            slackSend (channel: slackChannel, color: 'danger', message: "Build Failed: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]' (${env.BUILD_URL})")
            throw e
        } finally {
            slackSend (channel: slackChannel, color: '#FFFF00', message: "Build Completed: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]' (${env.BUILD_URL})")
        }
    }
}
